  <script>
    function validateForm() {
      var name = document.forms["registrationForm"]["name"].value;
      var password = document.forms["registrationForm"]["password"].value;
      var email = document.forms["registrationForm"]["email"].value;
      var phone = document.forms["registrationForm"]["phone"].value;
      var sex = document.forms["registrationForm"]["sex"].value;
      var dobDay = document.forms["registrationForm"]["dob-day"].value;
      var dobMonth = document.forms["registrationForm"]["dob-month"].value;
      var dobYear = document.forms["registrationForm"]["dob-year"].value;
      var languages = document.getElementsByName("languages[]");
      
      // Validate name
      if (name == "") {
        alert("Please enter your name.");
        return false;
      }
      
      // Validate password
      if (password == "") {
        alert("Please enter a password.");
        return false;
      }
      
      // Validate email
      var emailPattern = /^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/;
      if (!email.match(emailPattern)) {
        alert("Please enter a valid email address.");
        return false;
      }
      
      // Validate phone number
      var phonePattern = /^\d{10}$/;
      if (!phone.match(phonePattern)) {
        alert("Please enter a valid 10-digit phone number.");
        return false;
      }
      
      // Validate sex
      if (sex == "") {
        alert("Please select your sex.");
        return false;
      }
      
      // Validate date of birth
      if (dobDay == "" || dobMonth == "" || dobYear == "") {
        alert("Please select your date of birth.");
        return false;
      }
      
      // Validate languages known
      var checkedCount = 0;
      for (var i = 0; i < languages.length; i++) {
        if (languages[i].checked) {
          checkedCount++;
        }
      }
      if (checkedCount == 0) {
        alert("Please select at least one language known.");
        return false;
      }
    }
  </script>
</head>
